{
    "name": "z-vue-admin",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc -b && vite build",
        "preview": "vite preview",
        "prepare": "husky",
        "lint": "pnpm lint:eslint && pnpm lint:css",
        "lint:eslint": "eslint src/**/*.{js,ts,vue,html} --cache --quiet --fix",
        "lint:css": "stylelint src/**/*.{vue,css,scss,html} --cache --quiet --fix",
        "format": "prettier --write \"./**/*.{html,vue,ts,js,json}\""
    },
    "dependencies": {
        "element-plus": "^2.11.4",
        "pinia": "^3.0.3",
        "vue": "^3.5.22",
        "vue-router": "4"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@eslint/js": "^9.37.0",
        "@types/node": "^24.6.0",
        "@unocss/preset-attributify": "^66.5.2",
        "@unocss/preset-wind3": "^66.5.2",
        "@unocss/transformer-directives": "^66.5.2",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/tsconfig": "^0.8.1",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-vue": "^10.5.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.3",
        "postcss-html": "^1.8.0",
        "prettier": "^3.6.2",
        "sass": "^1.93.2",
        "stylelint": "^16.25.0",
        "stylelint-config-recommended-vue": "^1.6.1",
        "stylelint-config-standard-scss": "^16.0.0",
        "stylelint-order": "^7.0.0",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0",
        "unocss": "^66.5.2",
        "unplugin-auto-import": "^20.2.0",
        "unplugin-element-plus": "^0.10.0",
        "unplugin-vue-components": "^29.1.0",
        "vite": "^7.1.7",
        "vue-tsc": "^3.1.0"
    },
    "lint-staged": {
        "src/**/*.{vue,js,ts,html}": "pnpm lint:eslint",
        "src/**/*.{scss,css,html,vue}": "pnpm lint:css",
        "src/**/*.{js,ts,vue,html}": "pnpm format"
    }
}
